[mysqld]
port = ${DATABASE_PORT}
# Default storage engine
default-storage-engine = InnoDB

# ============================================================================
# Character Encoding (UTF-8 for Korean support)
# ============================================================================
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

[mysql]
# MySQL client default character encoding
default-character-set = utf8mb4

[mysqldump]
# Dump file character encoding
default-character-set = utf8mb4
